general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "tztime local"
order += "battery all"
order += "volume master"

battery all {
        format = "%status%percentage"
        format_down = "No battery"
        status_chr = " "
        status_bat = " "
        status_unk = " "
        status_full = " "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}
tztime local {
        format = "%H:%M|%d-%m"
}

volume master {
	format = " %volume"
	format_muted = " %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
